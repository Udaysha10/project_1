pipeline{
    agent any
    stages{
        stage("checkout"){
            steps{
                echo "${BUILD_NUMBER} is running"
                sh "git --version"
                sh "whoami"
                sh "pwd"
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/Udaysha10/project_1.git'
                }
        }
        stage("build & run"){
            agent{
                docker{image "node:16-alpine"}
            }
            steps{
            sh "pwd && node --version"
            sh "npm update -y"
            
            }
        }
        
    }
}